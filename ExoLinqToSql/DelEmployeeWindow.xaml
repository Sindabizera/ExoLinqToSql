<Window x:Class="ExoLinqToSql.DelEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Supprimer un Employé" Height="120" Width="208">
    <Grid>
        <Label Content="ID de l'employé :" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="lbID" VerticalAlignment="Top" />
        <TextBox Height="23" Margin="117,12,12,0" Name="tbID" VerticalAlignment="Top" />
        <Canvas Height="35" Name="cvButtons" VerticalAlignment="Bottom" Background="#c00">
            <Button Canvas.Left="6" Canvas.Bottom="6" Content="Supprimer" Height="23" Name="btnDelete" Width="75" Click="btnDelete_Click" />
            <Button Canvas.Right="6" Canvas.Bottom="6" Content="Quitter" Height="23" Name="btnQuit" Width="75" Click="btnQuit_Click" />
        </Canvas>
    </Grid>
</Window>
